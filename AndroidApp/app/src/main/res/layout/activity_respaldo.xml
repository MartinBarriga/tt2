<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="10sp"
    tools:context=".ui.usuario.Respaldo">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Respaldo"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:text="Fecha de último respaldo:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textViewFechaUltimoRespaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin respaldo previo"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toEndOf="@+id/textView10" />

    <Button
        android:id="@+id/botonRealizarCopia"
        android:layout_width="wrap_content"
        android:layout_height="45sp"
        android:layout_marginTop="60dp"
        android:capitalize="words"
        android:text="Realizar copia"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="32dp"
        android:text="¿Cada cuánto quieres que se realice un respaldo de tu información?"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonRealizarCopia" />

    <Spinner
        android:id="@+id/spinnerFrecuenciaDeRespaldo"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <ImageButton
        android:id="@+id/botonInformacionRespaldo"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:background="@android:drawable/ic_dialog_info"
        android:backgroundTint="#837B7B"
        app:layout_constraintBottom_toBottomOf="@+id/botonRealizarCopia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toEndOf="@+id/botonRealizarCopia"
        app:layout_constraintTop_toTopOf="@+id/botonRealizarCopia" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/boton_emergencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_baseline_error_outline_72"
        android:textAlignment="textStart"
        app:backgroundTint="#C81D1D"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:maxImageSize="48sp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/boton_instructivo_flotante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_baseline_help_outline_24"
        android:textAlignment="textStart"
        app:backgroundTint="#FFFFFF"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:maxImageSize="48sp" />
</androidx.constraintlayout.widget.ConstraintLayout>