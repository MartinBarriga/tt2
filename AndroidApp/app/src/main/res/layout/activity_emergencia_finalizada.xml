<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notificaciones.EmergenciaFinalizada">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/fechaEmergenciaFinalizada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/informacionEmergenciaFinalizada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="16sp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/graficaFrecuenciaCardiacaSpo2EmergenciaFinalizada"
                android:layout_width="match_parent"
                android:layout_height="600sp"
                android:layout_marginTop="16dp">

            </com.github.mikephil.charting.charts.LineChart>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/graficaECGEmergenciaFinalizada"
                android:layout_width="match_parent"
                android:layout_height="600sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="64dp"
                >

            </com.github.mikephil.charting.charts.LineChart>

            <Button
                android:id="@+id/boton_abrir_resumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resumen" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>